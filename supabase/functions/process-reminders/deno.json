{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true,
    "types": ["deno"],
    "target": "ES2021"
  },
  "importMap": {
    "imports": {
      "http/": "https://deno.land/std@0.168.0/http/",
      "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.7.1",
      "deno/": "https://deno.land/std@0.168.0/",
      "deno": "https://deno.land/std@0.168.0/types/deno.d.ts"
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
